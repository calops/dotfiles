# Blur
blur: {
    method = "dual_kawase";
    strength = 7;
    background = false;
    background-frame = false;
    background-fixed = true;
    background-exclude = [
        "class_g = 'Firefox' && window_type *= 'menu'"
    ];
}

# Fading
fading = true;
